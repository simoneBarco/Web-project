/* colori dei link*/
a:visited{
	color: #7D1472;
}
a:link {
    color: #131387;
}

.eventlink{
	color:transparent;
	position: absolute;
	width: 100%;
	height: 100%;
}

/*media querry, dimensione browser molto piccola e per i device mobile*/
@media screen and (max-width: 801px)
	  ,screen and (max-device-width: 400px) and (orientation: portrait)
	   ,screen and (max-device-width: 640px) and (orientation: landscape)

{

	#menuButton input{
	display:block;
	}
	#menuButton{
		background-image: url("../immagini/menu.png");
		background-repeat: no-repeat;
		background-position: center;
		background-size: 100% 100%;
		position:fixed;
		right:5%;
		top:0;
		width:10em;
		height: 10em;
		z-index: 3;
	}
	#left{
		float:right;
		width:50%;
		max-width: 100%;
		margin-top:-1em;
		margin-left: -5%;
		left:50%;
	}

	#menuButton #icon{
		height: 100%;
		width:100%;
		position:absolute;
		top:0;
		right: 0;
		z-index: 1;
		/*background: url("menu-icon.png");*/
	}

	#loginLink{
	display:block;
}

	#content{
	padding-left: 0;
	}

	#loginBox{
		display:none;
	}

	#map{
		display:block;
	}


	#mcb{
		opacity: 0;
		cursor:pointer;
		width:100%;
		height: 100%;
	}

	#mcb:checked + #left{
		display:none;
	}

	#footer{
		padding-left: 0;
	}

}

@media print {


	#menuButton, #loginBox, #bottom_section, #goTop, .controlPanel, input, .eventDescription h1, #footer{
		display: none;
	}
	#top{/*lascio shadows per dare una separazione e' un layout anche in stampa*/
		position: static;
		top:0;
	}
	#logoBox{
		width:100%;
	}

	#main_container{
		margin:0;
	}

	#content_container{
		width:100%;
	}
	#content{
		padding:0;
		min-height: none;
	}
	#content div{
		margin:	0;
		padding: 0;
	}
	.games{/* shadows tolte per risparmiare almeno un po' di inchistro*/
		box-shadow: none;
	}
   .descrizione{
   	display:flex;
   }
}
